// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  
}

model Outlet {
  id                      String                    @id @default(uuid())
  name                    String
  description             String?
  isActive                Boolean
  merchantId              String
  Merchant                Merchant                  @relation(fields: [merchantId], references: [id])
  CashbackConfigurations  CashbackConfiguration[]
  ExclusiveOffers         ExclusiveOffer[]
  Review                  Review?                   @relation(fields: [reviewId], references: [id])
  reviewId                String?                   @unique
  createdAt   DateTime @default(now())
}

model Merchant {
  id                      String                    @id  @default(uuid())
  businessName            String
  status                  String
  category                String
  LoyaltyProgram          LoyaltyProgram?
  CashbackConfigurations  CashbackConfiguration[]
  ExclusiveOffers         ExclusiveOffer[]
  Outlets                 Outlet[]
  CustomerTypes           CustomerType[]
  createdAt   DateTime @default(now())

}

model CashbackConfiguration {
  id                    String    @id @default(uuid())
  name                  String
  startDate             DateTime?
  endDate               DateTime?
  isActive              Boolean   @default(true)
  deletedAt             DateTime?
  eligibleCustomerTypes String[]
  merchantId            String
  Merchant              Merchant  @relation(fields: [merchantId], references: [id])
  Outlets               Outlet[]
  Review                Review?   @relation(fields: [reviewId], references: [id])
  reviewId              String?   @unique
  netCashbackBudget     Decimal   @default(0.0)
  usedCashbackBudget    Decimal   @default(0.0)
  createdAt   DateTime @default(now())

}

model ExclusiveOffer {
  id                    String    @id  @default(uuid())
  name                  String
  description           String
  startDate             DateTime
  endDate               DateTime
  isActive              Boolean   @default(true)
  deletedAt             DateTime?
  eligibleCustomerTypes String[]
  merchantId            String?
  Merchant              Merchant? @relation(fields: [merchantId], references: [id])
  Outlets               Outlet[]
  Review                Review?   @relation(fields: [reviewId], references: [id])
  reviewId              String?   @unique
  netOfferBudget        Decimal   @default(0.0)
  usedOfferBudget       Decimal   @default(0.0)
  createdAt   DateTime @default(now())

}

model LoyaltyProgram {
  id                    String              @id @default(uuid())
  name                  String
  isActive              Boolean             @default(true)
  merchantId            String?             @unique
  Merchant              Merchant?           @relation(fields: [merchantId], references: [id])
  LoyaltyTiers          LoyaltyTier[]
  Review                Review?             @relation(fields: [reviewId], references: [id])
  reviewId              String?             @unique
  pointsUsedInPeriod    Decimal             @default(0)
  pointsIssuedLimit     Decimal?
  createdAt   DateTime @default(now())

}

model LoyaltyTier {
  id              String         @id @default(uuid())
  name            String
  isActive        Boolean        @default(true)
  deletedAt       DateTime?
  minCustomerType String
  loyaltyProgramId String
  LoyaltyProgram  LoyaltyProgram @relation(fields: [loyaltyProgramId], references: [id])
  Review          Review?        @relation(fields: [reviewId], references: [id])
  reviewId        String?        @unique
  createdAt   DateTime @default(now())

}

  model CustomerType {
  id          String   @id @default(uuid())
  userId      String
  merchantId  String
  type        String
  Merchant    Merchant @relation(fields: [merchantId], references: [id])
  createdAt   DateTime @default(now())

}

model Review {
  id                     String                  @id @default(uuid())
  status                 String
  CashbackConfiguration  CashbackConfiguration?
  ExclusiveOffer         ExclusiveOffer?
  LoyaltyProgram         LoyaltyProgram?
  LoyaltyTier            LoyaltyTier?
  Outlet                 Outlet?
  createdAt   DateTime @default(now())

}

model UserOfferEligibility {
  id          String   @id @default(uuid())
  userId      String
  outletId    String   // can be switched up to array 
  offerType   String
  offerId     String
  merchantId  String
  isEligible  Boolean  @default(true)
  validFrom   DateTime
  validUntil  DateTime
  lastUpdated DateTime @default(now())
  createdAt   DateTime @default(now())

  // Unique constraint
  @@unique([userId, outletId, offerType, offerId], name: "unique_user_outlet_offer")
  
  
  // Primary query: Get offers for user that are currently valid
  @@index([userId, isEligible, validFrom, validUntil], name: "idx_user_active_offers")
  
  // Filter by user + offer type
  @@index([userId, offerType, validFrom, validUntil], name: "idx_user_offertype_dates")
  
  // Filter by user + outlet
  @@index([userId, outletId, validFrom, validUntil], name: "idx_user_outlet_dates")
  
  // Admin queries: Get all eligibility for an offer
  @@index([offerId, offerType], name: "idx_offer_eligibility")
  
  // Recomputation: Find stale records
  @@index([lastUpdated], name: "idx_last_updated")
  
  // Merchant analytics
  @@index([merchantId, offerType], name: "idx_merchant_offers")
  
  @@map("user_offer_eligibility")
}


model UserLoyaltyPoints {
  id          String   @id @default(uuid())
  userId      String   @unique
  points      Decimal  @default(0.0)
  lastUpdated DateTime @default(now()) @updatedAt
  createdAt   DateTime @default(now())

  @@index([userId], name: "idx_user_loyalty_points")
  @@map("user_loyalty_points")
}